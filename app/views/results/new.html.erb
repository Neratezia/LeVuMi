<nav class="navbar">
  <p class="navbar-brand"><%= @measurement.assessment.test.name %></p>
</nav>

<div class="container-fluid">
  <div id="content">
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

      <% open = true %>
      <% @measurement.results.each do |r| %>
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="h<%=r.id%>">
              <h4 class="panel-title">
                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#c<%=r.id%>" aria-expanded=<% if open %>"true"<% else %>"false"<% end %> aria-controls="c<%=r.id%>">
                <%= r.student.name %>
                </a>
                </h4>
            </div>
            <div id="c<%=r.id%>" class="panel-collapse collapse <% if open %>in<% end %>" role="tabpanel" aria-labelledby="h<%=r.id%>">
              <div class="panel-body">
                <div class="row">
                    <% r.items.each do |i| %>
                      <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="btn btn-default groupButton" id="<%= r.id%>-<%= i%>" onclick="toggleState(this)">
                          <b><%= Item.find(i.to_i).description %></b>
                        </div>
                      </div>
                    <% end %>
                  </div>
              </div>
            </div>
          </div>
          <% open = false%>
      <% end %>

    </div>
  </div>
</div>

<script>
    function toggleState(el) {
        $(el).toggleClass("btn-success");
    }
</script>