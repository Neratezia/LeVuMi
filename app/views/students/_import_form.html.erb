<%= form_for([@user, @group, @student], :html => {:class => "form-inline"}, multipart: true) do |f| %>

  <% if @student.errors.any? %>
      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  <% end %>


    <div class="form-group">
      <%= f.label "Datei", :class => "sr-only" %>
      <%= file_field_tag "file" %>
    </div>

  <div class="form-group">
    <%= f.submit "Hochladen", :class => "btn btn-primary" %>
  </div>
<% end %>
