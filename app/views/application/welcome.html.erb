<nav class="navbar">
</nav>

<div class="container-fluid">
  <div id="content">
    <div id="alert">
      <% unless notice.blank? %>
          <div class="alert alert-info alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <p id="notice"><%= notice %></p>
          </div>
      <% end %>
    </div>
    <div class="jumbotron">
      <h1>LeVuMi</h1>
      <p>Lern-Verlaufs-Monitoring</p>
      <%= form_tag(url_for(:controller => 'application', :action => 'login'), :class => "form") do %>
          <div class="form-group">
            <label class="sr-only" for="email">Email Adresse</label>
            <%= text_field_tag "loginemail", nil, type: "email", class: "form-control", placeholder: "E-Mail Adresse"%>
          </div>
          <div class="form-group">
            <label class="sr-only" for="email">Passwort</label>
            <%= text_field_tag "loginpassword", nil, type: "password", class: "form-control", placeholder: "Passwort"%>
          </div>
          <%= submit_tag 'Einloggen', :class => "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
