<!DOCTYPE html>
<html>
<head>
  <title>Levumi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-main" aria-expanded="false">
        <span class="sr-only">Navigation umschalten</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <p class="navbar-brand">LeVuMi</p>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse-main">
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "Meine Klassen", user_groups_path(@login)%></li>
        <li><%= link_to("Meine Daten", user_path(@login))%></li>
        <li><%= link_to "Informationen zu den Tests", tests_path%></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Weitere Informationen<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Hilfe", url_for(:controller => "application", :action => "static", :page => "help")%></li>
            <li><%= link_to "Elternbrief", asset_path("Elternbrief.docx")%></li>
            <li><%= link_to "Impressum", url_for(:controller => "application", :action => "static", :page => "imprint")%></li>
            <li><%= link_to "DatenschutzerklÃ¤rung", url_for(:controller => "application", :action => "static", :page => "privacy")%></li>
          </ul>
        </li>
      </ul>
      <form class="navbar-form navbar-right" method="post" action="<%=url_for(:controller => "application", :action => "logout")%>">
        <%= token_tag nil %>
        <button type="submit" class="btn btn-default">Ausloggen</button>
      </form>
      <% unless @login.isRegularUser? %>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Verwaltung<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <% if @login.hasCapability?("user") %>
                <li><%= link_to("Benutzer", users_path)%></li>
            <% end %>
          </ul>
        </li>
      </ul>
      <% end %>
    </div>
  </div>
</nav>


<div class="container-fluid">
  <div id="content">
    <div id="alert">
      <% unless notice.blank? %>
          <div class="alert alert-info alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <p id="notice"><%= notice %></p>
          </div>
      <% end %>
    </div>
    <%= yield %>
  </div>
</div>

</body>
</html>
